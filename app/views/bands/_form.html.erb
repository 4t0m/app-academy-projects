<% action_url = band.persisted? ? band_url(band) : bands_url %>
<% http_method = band.persisted? ? "PATCH" : "POST" %>

<% if @band.errors.full_messages %>
  <% @band.errors.full_messages.each do |error_msg| %>
    <div><%= error_msg %></div>
  <% end %>
<% end %>

<form action="<%= action_url %>" method="POST">
  <input type="hidden" name="_method" value="<%= http_method %>">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <p>
    <label>Name
    <input type="text" name="band[name]" value="<%= band.name %>">
    </label>
  </p>

  <input type="submit">
</form>
