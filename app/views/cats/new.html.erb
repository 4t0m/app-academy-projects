<form action="<%= cats_url %>" method="post">
  <label for="name">Name</label>
  <input id="name" type="text" name="cat[name]">

  <label for="sex">Sex</label>
  <input id="sex_m" type="radio" name="cat[sex]" value="M">
  <label for="sex_m">M</label>
  <input id="sex_f" type="radio" name="cat[sex]" value="F">
  <label for="sex_f">F</label>

  <label for="color">Color</label>
  <select id="color" name="cat[color]">
    <option disabled selected>-- Please Select Color --</option>
    <option value="black">Black</option>
    <option value="white">White</option>
    <option value="calico">Calico</option>
    <option value="tortoiseshell">Tortoiseshell</option>
    <option value="russian-blue">Russian Blue</option>
    <option value="muted-calico">Muted Calico</option>
    <option value="tuxedo">Tuxedo</option>
    <option value="tabby">Tabby</option>
    <option value="siamese">Siamese</option>
    <option value="other">Other</option>
  </select>

  <label for="birth_date">Birth Date</label>
  <input id="birth_date" type="date" name="cat[birth_date]">

  <label for="description">Description</label>
  <input id="description" type="textarea" name="cat[description]">

  <input type="submit" value="Add Cat">
</form>
