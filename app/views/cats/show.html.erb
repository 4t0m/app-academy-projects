<table>
  <tr>
    <th>Name</th>
    <th>Color</th>
    <th>Sex</th>
    <th>Age</th>
    <th>Description</th>
  </tr>
  <tr>
    <td><%= @cat.name %></td>
    <td><%= @cat.color %></td>
    <td><%= @cat.sex %></td>
    <td><%= @cat.age %></td>
    <td><%= @cat.description %></td>
  </tr>
</table>

<br>

<table>
  <caption>Rental Requests</caption>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
    <th> </th>
    <th> </th>
  </tr>

  <% @cat.cat_rental_requests.order(:start_date).each do |request| %>
    <tr>
      <td><%= request.start_date %></td>
      <td><%= request.end_date %></td>
      <td><%= request.status %></td>
      <% if request.pending? %>
        <td><%= button_to 'Approve', approve_cat_rental_request_url(request_id: request.id) %></td>
        <td><%= button_to 'Deny', deny_cat_rental_request_url(request_id: request.id) %></td>
      <% end %>
    </tr>
  <% end %>
</table>
